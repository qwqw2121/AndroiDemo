<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    android:orientation="vertical"
    tools:context="com.chenexample.myshop16173.ForgerActivity">

    <TextView
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="@string/forget_pw" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77FFFFFF"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">



        <EditText
            android:id="@+id/editText_forger_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/user_name"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editText_forger_pw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/new_pw"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editText_forger_pw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/input_pw_two"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_forger_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#77FFFFFF"
            android:ems="10"
            android:layout_weight="3"
            android:hint="@string/code"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button_forger_code"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:background="#ccFFFFFF"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="@string/get_code" />
    </LinearLayout>

    <Button
        android:id="@+id/button_forger_forger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="#88FF0000"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:text="@string/forget_now"
        android:textSize="25sp" />

</LinearLayout>
